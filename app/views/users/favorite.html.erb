<div class="card-list-container py-5">
 
  <h2 class="col">いいね一覧</h2>
  <div class="card w-50 mx-auto mt-4 shadow-lg">
             <% @favorite_posts.each do |favorite| %>
             <div class="row">
              <div class="col-md-2" style="padding: 20px;">
                  <%= link_to user_path(favorite.user.id), class: "rounded-circle" do %> 
                     <%= image_tag(favorite.user.get_user_icon) %>
                     <% end %>
              </div>
               <div class="card-body">
                <div class="col">
                 <ul class="list-unstyled">
                  <li class="list-item"><%= link_to favorite.user.email, user_path(favorite.user.id) %></li>
                  <li class="list-item">曲名　　<%= favorite.music_title %></li>
                  <li class="list-item">URL　　 <%= favorite.music_url %></li>
                  <li class="list-item">アーティスト　　<%= favorite.music_artist_name %></li>
                  <li class="list-item">ジャンル　　<%= favorite.music_genre %></li>

                 </ul>
                </div>
               </div>
               <div class="col">
                <%= favorite.created_at.strftime('%Y/%m/%d %H:%M') %>
               </div>
             </div>
             <div class="card-footer">
              <%= link_to "レビュー詳細へ", review_path(favorite.id) %>
             </div>
             <% end %>
  </div>
</div>